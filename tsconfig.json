{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "es2017",
        "sourceMap": false,
        "allowJs": false,
        "moduleResolution": "node",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist"
    },
    "exclude": [
        "node_modules",
        "backup",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts"
    ]
}
